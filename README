function addChar(input, character) {
if(input.value == null || input.value == "0")
input.value = character
else
input.value += character
}
function cosinus(form) {
var derajat=form.layar.value * Math.PI/ 180
if (form.layar.value==60){
form.layar.value= 0.5}
else if (form.layar.value==90){
form.layar.value==0}
else if (form.layar.value==120){
form.layar.value=-1/2 }
else if (form.layar.value==270){
form.layar.value=0}
else{
form.layar.value = Math.cos(derajat)}
}
function sinus(form) {
var derajat = form.layar.value * Math.PI / 180
if(form.layar.value == 30){
form.layar.value= 1/2}
else if (form.layar.value== 180){
form.layar.value=0}
else if (form.layar.value==360){
form.layar.value="-0" }
else{
form.layar.value = Math.sin(derajat);}
}
function tangen(form) {
var derajat = form.layar.value * Math.PI / 180
if (form.layar.value==90){
form.layar.value="tak terdifinisi" }
else{
form.layar.value = Math.tan(derajat);}
}
function arcTan(form){
form.layar.value= Math.atan(form.layar.value)
}
function arcSin(form) {
form.layar.value = Math.asin(form.layar.value)
}
function arcCos (form) {
form.layar.value = Math.acos(form.layar.value)
}
function tanh(x) {
var e = Math.exp(2*x) 
return (e-1)/(e+1)}
Math.constructor.prototype.tanh = tanh;
function tanhiperbolic(form){
var derajat=form.layar.value * Math.PI/180
form.layar.value= Math.tanh(derajat)
}
function sinh(x)
   {
   var e = Math.pow(Math.E, x)
   var y = Math.pow(Math.E, -x)
   return (e-y)/2
   }
   // Register the new function
   Math.constructor.prototype.sinh = sinh;
function sinhip(form){
var derajat= form.layar.value * Math.PI/180
form.layar.value= Math.sinh(derajat)}
function cosh(x)
   {
   var e = Math.pow(Math.E, x)
   var y = Math.pow(Math.E,-x)  
   return (e+y)/2
   }
   // Register the new function
   Math.constructor.prototype.cosh = cosh;
